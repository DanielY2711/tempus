{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build DY",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "/I${fileDirname}",
                "${file}",
                "activityTracker.cpp",
                "windowGetter.cpp",
                "sqlite3.c",
                "/link",
                "User32.lib",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "shart fart task",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "dependsOn": "build",
            "group": "none",
            "problemMatcher": [],
            "detail": "Run the compiled program"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",  // This tells cmd to execute the following command and terminate
                "del /Q \"${fileDirname}\\*.exe\" \"${fileDirname}\\*.obj\" \"${fileDirname}\\*.ilk\" \"${fileDirname}\\*.pdb\" \"${fileDirname}\\*.db"
            ],
            "group": "none",
            "problemMatcher": [],
            "detail": "Delete intermediate and output files"
        }
    ],
    "version": "2.0.0"
}